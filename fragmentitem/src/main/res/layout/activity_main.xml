<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fragmentitem.MainActivity">

    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textviewXinpin"
            style="@style/style_menu_item"
            android:drawableTop="@drawable/menu_item_new_goods_normal"
            android:text="新品" />

        <TextView
            android:id="@+id/textviewJingxuan"
            style="@style/style_menu_item"
            android:drawableTop="@drawable/menu_item_boutique_normal"
            android:text="精选" />

        <TextView
            android:id="@+id/textviewFenlei"
            style="@style/style_menu_item"
            android:drawableTop="@drawable/menu_item_category_normal"
            android:text="分类" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textviewGouwuche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/menu_item_cart_normal"
                android:text="购物车"
                android:textSize="18sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_hint"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:text="32"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textviewLianxiren"
            style="@style/style_menu_item"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/menu_item_contact_normal"
            android:text="新品" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_menu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>
